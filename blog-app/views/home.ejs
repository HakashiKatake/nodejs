<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head') %>
    <title>BlogSpace - Share Your Stories</title>
  </head>
  <body>
    <%- include('./partials/nav') %>

    <div class="content-wrapper">
      <!-- Hero Section -->
      <% if (!locals.user) { %>
      <div class="container py-5">
        <div class="row align-items-center min-vh-50">
          <div class="col-lg-6">
            <div class="fade-in-up">
              <h1 class="display-4 fw-bold mb-4" style="color: var(--text-primary);">
                Share Your <span style="color: var(--primary-color);">Stories</span> with the World
              </h1>
              <p class="lead mb-4" style="color: var(--text-secondary);">
                Join our community of writers and readers. Create, share, and discover amazing stories from people around the globe.
              </p>
              <div class="d-flex gap-3">
                <a href="/user/signup" class="btn btn-primary btn-lg">
                  <i class="fas fa-rocket me-2"></i>Get Started
                </a>
                <a href="/user/signin" class="btn btn-outline-primary btn-lg">
                  <i class="fas fa-sign-in-alt me-2"></i>Sign In
                </a>
              </div>
            </div>
          </div>
          <div class="col-lg-6">
            <div class="text-center fade-in-up">
              <i class="fas fa-blog" style="font-size: 15rem; color: var(--primary-color); opacity: 0.1;"></i>
            </div>
          </div>
        </div>
      </div>
      <% } %>

      <!-- Blog Posts Section -->
      <div class="container py-5">
        <% if (locals.user) { %>
        <div class="row mb-5">
          <div class="col-12">
            <div class="text-center fade-in-up">
              <h2 class="display-5 fw-bold mb-3">Welcome back, <%= locals.user.fullName %>!</h2>
              <p class="lead text-muted mb-4">Discover amazing stories from our community</p>
            </div>
          </div>
        </div>
        <% } else { %>
        <div class="row mb-5">
          <div class="col-12">
            <div class="text-center fade-in-up">
              <h2 class="display-5 fw-bold mb-3">Latest Stories</h2>
              <p class="lead text-muted mb-4">Explore the most recent posts from our community</p>
            </div>
          </div>
        </div>
        <% } %>

        <% if (blogs && blogs.length > 0) { %>
        <div class="row g-4">
          <% blogs.forEach((blog, index) => { %>
          <div class="col-lg-4 col-md-6">
            <div class="card h-100 fade-in-up" style="animation-delay: <%= index * 0.1 %>s;">
              <div class="position-relative">
                <img src="<%= blog.coverImageURL %>" class="card-img-top" alt="<%= blog.title %>" />
                <div class="position-absolute top-0 end-0 m-3">
                  <span class="badge bg-primary rounded-pill">
                    <i class="fas fa-calendar-alt me-1"></i>
                    <%= new Date(blog.createdAt).toLocaleDateString() %>
                  </span>
                </div>
              </div>
              <div class="card-body d-flex flex-column">
                <h5 class="card-title mb-3" style="color: var(--text-primary); line-height: 1.3;">
                  <%= blog.title %>
                </h5>
                <p class="card-text text-muted mb-3 flex-grow-1">
                  <%= blog.body.substring(0, 120) %>...
                </p>
                <div class="d-flex justify-content-between align-items-center mt-auto">
                  <div class="d-flex align-items-center">
                    <img src="<%= blog.createdBy.profileImageURL %>" alt="Author" class="rounded-circle me-2" style="width: 32px; height: 32px; object-fit: cover;">
                    <small class="text-muted"><%= blog.createdBy.fullName %></small>
                  </div>
                  <a href="/blog/<%= blog._id %>" class="btn btn-primary btn-sm">
                    <i class="fas fa-arrow-right me-1"></i>Read More
                  </a>
                </div>
              </div>
            </div>
          </div>
          <% }) %>
        </div>
        <% } else { %>
        <div class="row">
          <div class="col-12">
            <div class="text-center py-5 fade-in-up">
              <i class="fas fa-file-alt" style="font-size: 4rem; color: var(--text-secondary); opacity: 0.5;"></i>
              <h3 class="mt-3 mb-2">No Stories Yet</h3>
              <p class="text-muted mb-4">Be the first to share your story with the community!</p>
              <% if (locals.user) { %>
              <a href="/blog/add-new" class="btn btn-primary">
                <i class="fas fa-plus me-2"></i>Create Your First Blog
              </a>
              <% } else { %>
              <a href="/user/signup" class="btn btn-primary">
                <i class="fas fa-user-plus me-2"></i>Join Us Today
              </a>
              <% } %>
            </div>
          </div>
        </div>
        <% } %>
      </div>

      <!-- Call to Action Section -->
      <% if (!locals.user && blogs && blogs.length > 0) { %>
      <div class="container py-5">
        <div class="row">
          <div class="col-12">
            <div class="text-center p-5 rounded-4 fade-in-up" style="background: linear-gradient(135deg, var(--primary-color), var(--primary-dark)); color: white;">
              <h3 class="mb-3">Ready to Share Your Story?</h3>
              <p class="mb-4">Join thousands of writers and start your blogging journey today.</p>
              <a href="/user/signup" class="btn btn-light btn-lg">
                <i class="fas fa-pen-fancy me-2"></i>Start Writing
              </a>
            </div>
          </div>
        </div>
      </div>
      <% } %>
    </div>

    <%- include('./partials/scripts') %>
  </body>
</html>